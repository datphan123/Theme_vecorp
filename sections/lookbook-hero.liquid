<style>
  {% if section.settings.overlay %}
    .lookbook-hero.overplay::after {
      {% if section.settings.color_overlay != blank %}
        background-color: {{section.settings.color_overlay}};
      {% else %}
        background-color: #000;
      {% endif %}

      {% if section.settings.overlay_opacity != blank %}
        opacity: calc({{section.settings.overlay_opacity }} / 100);
      {% else %}
        opacity: .4;
      {% endif %}
    }
  {% endif %}
</style>

<div class="lookbook-hero 
  {% if section.settings.overlay %} overplay {% endif %}
  {% if section.settings.hero_layout == 'fixed_width' %} container {% endif %} 
  {% if section.settings.hero_size == 'large' %} lookbook-hero-h-large {% endif %}" 
  {%- if section.settings.image != blank -%}
      style="
         background-image: url({{ section.settings.image | img_url: '2048x' }}); 
         background-position: center {{section.settings.alignment}};"
   {%- endif -%}
   >
   {%- if section.settings.image == blank -%}
      <div class="default-image-background pos-abs-100">{{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}</div>
   {%- endif -%}

  <div class="container">
    <h1 class="lookbook-hero-heading
      {% if section.settings.text_size == 'large' %} lookbook-hero-heading-fz-large {% endif %}
    ">
      {{section.settings.heading}}
    </h1>
  </div>
</div>

{% schema %}
{
   "name":"Hero",
   "class":"lookbook-hero-section",
   "settings":[
      {
         "type":"image_picker",
         "id":"image",
         "label":"Image"
      },
      {
         "type":"select",
         "id":"alignment",
         "label":"Image alignment",
         "default":"center",
         "options":[
            {
               "value":"top",
               "label":"Top"
            },
            {
               "value":"center",
               "label":"Middle"
            },
            {
               "value":"bottom",
               "label":"Bottom"
            }
         ]
      },
      {
         "type":"select",
         "id":"hero_layout",
         "label":"Layout",
         "default":"full_width",
         "options":[
            {
               "label":"Full width",
               "value":"full_width"
            },
            {
               "label":"Fixed width",
               "value":"fixed_width"
            }
         ]
      },
      {
         "type":"select",
         "id":"hero_size",
         "label":"Section height",
         "default":"medium",
         "options":[
            {
               "label":"Medium",
               "value":"medium"
            },
            {
               "label":"Large",
               "value":"large"
            }
         ]
      },
      {
         "type":"select",
         "id":"text_size",
         "label":"Text size",
         "default":"medium",
         "options":[
            {
               "label":"Medium",
               "value":"medium"
            },
            {
               "label":"Large",
               "value":"large"
            }
         ]
      },
      {
         "type":"text",
         "id":"heading",
         "label":"Heading",
         "default":"Lookbook in page"
      },
      {
         "type": "checkbox",
         "id": "overlay",
         "label": "Show overlay",
         "default": true
      },
      {
         "type": "color",
         "id": "color_overlay",
         "label": "Color overlay",
         "default": "#000"
      },
      {
        "type": "range",
        "id": "overlay_opacity",
        "label": "Overlay opacity",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 54
      }
   ],
   "presets":[
      {
         "name":{
            
         },
         "category":{
            
         }
      }
   ]
}
{% endschema %}