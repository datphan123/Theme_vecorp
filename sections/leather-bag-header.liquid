<style data-shopify="">
    .page-headpage{
        height: 150px;
        text-align: center;
        position: relative;
        padding: 50px 0;
        color: #fff;
    }
    .page-headpage:before {
        content: '';
        opacity: .5;
        position: absolute;
        background: #000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        z-index: 90;
        pointer-events: none;
    }
    .heading-bg{
        border: 3px;
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: scroll;
        background-position: center center;
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
    }
    .heading-title{
        position: relative;
        z-index: 100;
    }
    .heading-title h1{
        font-size: 20px;
        line-height: 20px;
        font-weight: 500;
        text-transform: uppercase;
        padding-bottom: 10px;
    }
</style>
<div class="page-headpage">
    <div class="heading-bg" style="background-image: {%- if section.settings.bgheading != blank -%}
            url('{{ section.settings.bgheading | img_url:'2048px'}}')
        {%- else -%}
        url('{{ 'background_hero.jpg' | asset_url }}')
        {%- endif -%};"> 
    </div>
    <div class="heading-title">
        <h1>{{section.settings.heading}}</h1>
        <time class="f_libre">{{ "now" | date: "%b %m, %Y" }}</time>
    </div>
</div>

{% schema %}
    {
        "name": "heading",
        "class": "section-heading-leather",
        "settings": [
            {
                "type": "text",
                "label": "Your title",
                "id": "heading"
            },
            {
                "type": "image_picker",
                "id": "bgheading",
                "label": "Background heading"
            }
        ]
    }
{% endschema %}